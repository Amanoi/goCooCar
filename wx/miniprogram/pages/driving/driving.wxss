/* miniprogram/pages/driving/driving.wxss */
page{
    width: 100%;
    height: 100%;
}
.container{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column-reverse;
    justify-content: start;
}
.driving-container{
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items:center;
    width: 100%;
    height: 380rpx;
}
.driving-time{
    width: 350rpx;
    text-align: center;
}
.driving-time .cuIcon-timefill{
    color: orange;
    margin-right: 20rpx;
}
.driving-time text{
    font-size: 68rpx;
    font-weight: bold;
}
.driving-cost{
    text-align: center;
}
.driving-stop-btn{
    width: 650rpx !important;
}

#map{
    width: 100%;
    flex-grow: 1;
}